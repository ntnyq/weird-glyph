{
  "name": "weird-glyph",
  "type": "module",
  "version": "0.0.2",
  "packageManager": "pnpm@10.10.0",
  "description": "Transform common glyphs to weird glyphs.",
  "keywords": [
    "weird-glyph"
  ],
  "license": "MIT",
  "author": {
    "name": "ntnyq",
    "email": "ntnyq13@gmail.com"
  },
  "homepage": "https://github.com/ntnyq/weird-glyph#readme",
  "repository": "ntnyq/weird-glyph",
  "bugs": {
    "url": "https://github.com/ntnyq/weird-glyph/issues"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.mts",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "unbuild",
    "deploy": "run-s build play:build",
    "dev": "unbuild --watch",
    "lint": "eslint",
    "play": "pnpm -C playground run dev",
    "play:build": "pnpm -C playground run build",
    "prepare": "husky",
    "release": "run-s release:check release:version release:publish",
    "release:check": "run-s build lint typecheck test",
    "release:publish": "pnpm publish",
    "release:version": "bumpp",
    "stub": "unbuild --stub",
    "test": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ntnyq/eslint-config": "^4.1.0",
    "@ntnyq/prettier-config": "^2.0.0",
    "bumpp": "^10.1.0",
    "eslint": "^9.25.1",
    "husky": "^9.1.7",
    "nano-staged": "^0.8.0",
    "npm-run-all2": "^7.0.2",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "unbuild": "^3.5.0",
    "vitest": "^3.1.2"
  },
  "engines": {
    "node": ">=18.18.0"
  },
  "nano-staged": {
    "*.{js,ts,mjs,cjs,md,yml,yaml,toml,json}": "eslint --fix",
    "*.{css,scss,html}": "prettier -uw"
  }
}
